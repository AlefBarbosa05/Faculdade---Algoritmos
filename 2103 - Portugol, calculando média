programa {
  funcao inicio() {
    real nota1, nota2, media


    escreva ("Informe a nota 1:")
    leia (nota1)
    escreva ("Informe a nota 2:")
    leia (nota2)
    media = (nota1 + nota2)/2
    escreva (media)
    se (media >= 6) 
    
    {
    escreva ("Você foi aprovado") 
    }  
    senao
    {
      escreva ("Você foi reprovado")
    }
  }
}
